# Токен вашего Telegram бота
# Получите его у @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# Username канала для проверки подписки (с символом @)
# Например: @mychannel или mychannel
CHANNEL_USERNAME=@your_channel_username

# Webhook URL для автоматического отслеживания (опционально)
# Если не указан, используется long polling
WEBHOOK_URL=https://your-domain.com/webhook

# Порт для webhook сервера (по умолчанию 3000)
PORT=3000

# Список ID администраторов через запятую (опционально)
# Например: 123456789,987654321
# Если не указан, команда /cleanup доступна всем
ADMIN_IDS=123456789,987654321 